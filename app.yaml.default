application: <APPLICATION_NAME>
version: 1
runtime: go
api_version: go1

env_variables:
  HOOK_TOKEN: <token of outgoing webhook>
  BOT_TOKEN: <token of bot integration>
  SLACKBOT_URL: <slackbot URL>

handlers:
- url: /hook
  script: _go_app
- url: /loggly
  script: _go_app
- url: /alerts/standup
  script: _go_app
  login: admin
